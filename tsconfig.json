{
  "compilerOptions": {
    /* ================================
       TARGET & RUNTIME
    ================================= */
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    /* ================================
       JS / TS BEHAVIOR
    ================================= */
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* ================================
       MODULE SYSTEM
    ================================= */
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    /* ================================
       NEXT.JS
    ================================= */
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* ================================
       PATH ALIAS (IMPORTANT)
    ================================= */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  /* ================================
     INCLUDE
  ================================= */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  /* ================================
     EXCLUDE
  ================================= */
  "exclude": [
    "node_modules"
  ]
}
